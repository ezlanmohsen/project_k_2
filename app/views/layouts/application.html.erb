<!DOCTYPE html>
<html>
  <head>
    <title>Project K</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- META required by bootstrap -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- CDN from bootstrap website -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="background-color: rgba(80, 162, 224, 0.3)">

    <% if current_page?('/') == false %>
      <!-- From user authentication steps -->
      <% if current_recruiter %>
        Signed in as <%= current_recruiter.name %> | <%= link_to "Your Company", company_path(current_recruiter) %> | <%= link_to "Logout", '/logout' %>
      <% else %>
        <%= link_to 'Login', '/' %> | <%= link_to 'Signup', '/' %>
      <% end %>
    <% end %>

    <%= yield %>
  </body>
</html>
